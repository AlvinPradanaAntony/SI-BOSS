<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<!--  Layout dari tampilan per item ListView  -->

    <TextView
        android:id="@+id/busName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5pt"
        android:layout_marginTop="5pt"
        android:text="bus name"
        android:textSize="14pt"
        android:layout_toRightOf="@id/bus_image"
        />

    <TextView
        android:id="@+id/detail_bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="detail"
        android:layout_marginHorizontal="5pt"
        android:layout_marginTop="2pt"
        android:layout_toRightOf="@id/bus_image"
        android:layout_below="@id/busName"
        />

    <TextView
        android:id="@+id/release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="release date"
        android:layout_marginHorizontal="5pt"
        android:layout_marginTop="2pt"
        android:layout_marginBottom="2pt"
        android:layout_below="@id/detail_bus"
        android:layout_toRightOf="@id/bus_image"
        />

    <ImageView
        android:id="@+id/bus_image"
        android:layout_width="200dp"
        android:layout_height="100dp" />
<!--        android:src="@drawable/ic_temp_banner_foreground"-->


</RelativeLayout>