    <RelativeLayout
        android:id="@+id/relative3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Login akun"
            android:textColor="@color/textHeadline"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv2"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Silahkan login untuk masuk ke dalam aplikasi"
            android:textColor="@color/textDescription"
            android:textSize="14sp" />

        <!--        <ImageView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="258dp"-->
        <!--            android:src="@drawable/background2" />-->

        <RelativeLayout
            android:id="@id/relativeEt"
            android:layout_width="wrap_content"
            android:layout_height="165dp"
            android:layout_below="@+id/tv3"
            android:layout_marginTop="10dp"
            android:background="@drawable/background2">

            <EditText
                android:id="@+id/EtEmailLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawablePadding="16dp"
                android:fontFamily="@font/roboto"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/EtPasswordLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EtEmailLogin"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="16dp"
                android:fontFamily="@font/roboto"
                android:hint="Kata sandi"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/relative4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EtPasswordLogin"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp">

                <CheckBox
                    android:id="@+id/CbShowPasswordLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Lihat kata sandi"
                    android:textSize="12sp"
                    android:buttonTint="@color/textDescription"/>

                <TextView
                    android:id="@+id/TvLupaSandi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/roboto"
                    android:onClick=""
                    android:text="Lupa kata sandi?"
                    android:textColor="@color/blue"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeEt"
            android:layout_marginTop="19dp">

            <Button
                android:id="@+id/BtnLogin"
                android:layout_width="137dp"
                android:layout_height="41dp"
                android:layout_marginHorizontal="100dp"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="150dp"
                android:background="@drawable/round_btn"
                android:text="Login"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/BtnLogin"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="@string/String_sign_up"
                android:textColor="@color/textHeadline"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/TvDaftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv4"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/sign_up_button"
                android:textColor="@color/textHeadline"
                android:textSize="16sp" />

            <Button
                android:id="@+id/Btn_ulang_slide"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/edittext_bg"
                android:text="Ulangi Slide"
                android:textAllCaps="false"
                android:textColor="@color/textDescription"
                android:textSize="12sp" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>