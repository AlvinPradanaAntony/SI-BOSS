<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/dari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="4dp"
        android:text="Dari"
        app:layout_constraintBottom_toTopOf="@+id/from"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_bus"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/blue_bus"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:foreground="@drawable/bus_blur"
        android:src="@drawable/blue_bus"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-7dp" />

    <EditText
        android:id="@+id/from"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/dari"
        android:layout_marginHorizontal="7.5dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/ic_gps"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:paddingLeft="10dp"
        android:text="Terminal / Kota asal"
        android:textColor="#A5A5A5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_bus" />

    <TextView
        android:id="@+id/ke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/from"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:text="Ke"
        app:layout_constraintBottom_toTopOf="@+id/to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/to"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/ke"
        android:layout_marginHorizontal="7.5dp"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/ic_gps"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:paddingLeft="10dp"
        android:text="Terminal / Kota tujuan"
        android:textColor="#A5A5A5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="397dp" />

    <TextView
        android:id="@+id/pergi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/to"
        android:layout_marginStart="16dp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="12dp"
        android:text="Pergi"
        app:layout_constraintBottom_toTopOf="@+id/pulang_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/pergi_edit"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/pergi"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/ic_calendar"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:paddingLeft="10dp"
        android:text="Tanggal"
        android:textColor="#A5A5A5"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="518dp" />

    <TextView
        android:id="@+id/pulang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/to"
        android:layout_marginBottom="12dp"
        android:layout_toRightOf="@+id/pergi"
        android:text="Pulang"
        app:layout_constraintBottom_toTopOf="@+id/pergi_edit"
        app:layout_constraintTop_toBottomOf="@+id/to"
        app:layout_constraintVertical_bias="0.98"
        tools:layout_editor_absoluteX="245dp" />

    <EditText
        android:id="@+id/pulang_edit"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/pulang"
        android:layout_marginStart="16dp"
        android:layout_toRightOf="@+id/pergi"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/ic_calendar"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:paddingLeft="10dp"
        android:text="Tanggal"
        android:textColor="#A5A5A5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="518dp" />

    <Button
        android:id="@+id/cari"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/gradient"
        android:text="Cari"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>