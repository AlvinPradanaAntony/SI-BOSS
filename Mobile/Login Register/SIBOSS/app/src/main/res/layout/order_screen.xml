<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_bg">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/gradient_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"
            android:text="Pemesanan"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blue_bus"
        android:layout_marginStart="8dp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="4dp"
        android:text="Dari :   "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/from"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/dari"
        android:layout_marginHorizontal="7.5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/ic_gps"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:paddingLeft="10dp"
        android:text="Terminal / Kota asal"
        android:textColor="#A5A5A5" />

    <ImageView
        android:id="@+id/blue_bus"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:foreground="@drawable/blue_bus"
        android:src="@drawable/blue_bus"
        android:layout_below="@+id/relative1"/>

    <TextView
        android:id="@+id/ke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/from"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:text="Ke :   "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/to"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/ke"
        android:layout_marginHorizontal="7.5dp"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/ic_gps"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:paddingLeft="10dp"
        android:text="Terminal / Kota tujuan"
        android:textColor="#A5A5A5"/>

    <TextView
        android:id="@+id/pergi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/to"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:text="Pergi :   "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pergi_edit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/pergi"
        android:layout_marginHorizontal="7.5dp"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/ic_calendar"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:paddingLeft="10dp"
        android:text="Atur tanggal pergi"
        android:textColor="#A5A5A5" />

    <Button
        android:id="@+id/Btncari"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/gradient"
        android:text="Cari"
        android:textColor="@color/white"
        android:textSize="16dp" />

</RelativeLayout>